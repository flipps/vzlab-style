script.
    // simulate loading update
    ;(function (el) {
        var loadingCounter = 0
        var loadingStartTime = Date.now()
        var loadingPeriod = 9000 // ms
        function loadingUpdateWidth() {
            var loaded = ((Date.now() - loadingStartTime) % loadingPeriod) / loadingPeriod
            var width = Math.round(loaded * 100) + "%"
            el.style.width = width
            
            window.setTimeout(loadingUpdateWidth, 800)
        }
        loadingUpdateWidth()
    })(document.querySelector('#loading'))
